
vbell off
altscreen on

# change screen function key from Ctrl-a to Ctrl-z
escape ^Zz

# Disable the startup message
startup_message off

# Set a large scrollback buffer
defscrollback 32000

# Always start `screen` with UTF-8 enabled (`screen -U`)
defutf8 on

hardstatus alwayslastline
# k = black, y = yellow, w = white
# .kw = background black,  font white
# .yk = background yellow, font black
hardstatus string "%{.kw}%-w%{.yk}%n %t%{-}%+w %=%{..G} %H(%l) %{..Y} %Y/%m/%d %c:%s "


# disable screen locker
# ref: https://superuser.com/questions/343965/what-is-the-default-password-of-screen
bind x
bind ^x
